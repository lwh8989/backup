{% macro base(shapeClass, sizeClass, colorClass, txt, state) %}
    <button class="element-btn {{ shapeClass }} {{ colorClass }} {{ sizeClass }}" {{ state }}>
        <span class="btn-txt">{{txt}}</span>
    </button>
{% endmacro %}
{% macro aLink(shapeClass, sizeClass, colorClass, txt, state) %}
    <a href="#" class="element-btn {{ shapeClass }} {{ colorClass }} {{ sizeClass }} {{ state }}" >
        <span class="btn-txt">{{txt}}</span>
    </a>
{% endmacro %}
{% macro withIcon(shapeClass, sizeClass, colorClass, txt, withIcon, iconClass ,state) %}
    <button class="element-btn {{ shapeClass }} {{ colorClass }} {{ sizeClass }} {{withIcon}} " {{ state }}>
        <span class="stove-icon {{ iconClass }}" style=""></span>
        <span class="btn-txt">{{txt}}</span>
    </button>
{% endmacro %}
{% macro withIconInverse(shapeClass, sizeClass, colorClass, txt, withIcon, iconClass ,state) %}
    <button class="element-btn {{ shapeClass }} {{ colorClass }} {{ sizeClass }} {{withIcon}} " {{ state }}>
        <span class="btn-txt">{{txt}}</span>
        <span class="stove-icon {{ iconClass }}" style=""></span>
    </button>
{% endmacro %}
{% macro onlyIcon(shapeClass, sizeClass, colorClass, txt, onlyIcon, iconClass, state) %}
    <button class="element-btn {{ shapeClass }} {{ colorClass }} {{ sizeClass }} {{onlyIcon}} " {{ state }}>
        <span class="stove-icon {{ iconClass }}" style=""></span>
    </button>
{% endmacro %}

