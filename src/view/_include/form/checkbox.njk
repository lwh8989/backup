{% macro base(width, height, styleClass, styleText, statusClass, id, name, value, state, label) %}
<div class="element-checkbox {{ width }} {{ height }} {{ styleClass }} {{ styleText }} {{ statusClass }}">
  <input class="checkbox-input" type="checkbox" id="{{ id }}" name="{{ name }}" value="{{ value }}" {{state}}>
  <label class="checkbox-label" for="{{ id }}">{{ label }}</label>
</div>
{% endmacro %}