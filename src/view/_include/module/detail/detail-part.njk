{% import "_include/module/reply/reply.njk" as reply %}
{% import "_include/module/profile/profile.njk" as profile %}
{% import "_include/module/write/write-ui.njk" as writeUi %}
{% import "_include/form/button.njk" as btn %}
{% import "_include/form/dropdown.njk" as dropdown %}

{% macro detailHeader( title, viewOption ) %}
    <div class="detail-header">
        <button class="title-btn">자유게시판 <i class="ic-control-arrow-right-line"></i></button>
        <p class="title">{{ title }} <strong>[999]</strong></p>
        <div class="info-wrap">
            <div class="info">
                {{ profile.profileHorizontal ( viewOption ) }}
            </div>
            <div class="info-btn">
                <button><i class="ic-communication-translate-line"></i></button>
                <button><i class="ic-navigation-option-vertical-fill"></i></button>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro detailContents(  ) %}
