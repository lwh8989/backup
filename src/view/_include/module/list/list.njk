{% macro horizontalBoard(style, img, listTitle, listTxt, listFront, class, nickActive, timeActive, fileType, state) %}
    <div class="list-wrap list-type-horizontal list-type-board" style="{{ style }}">
        <div class="list-top">
            <div class="info">
                <strong class="nick">
                    <div class="element-dropdown h40 active">
                        <button class="element-select-button">
                            <div class="profile-img">
                                <img src="/static/image/list/profile_demo.png" alt="">
                            </div>
                            {% if class == "CM" %}
                                <span class="system-sucess">{{ class }}</span>
                            {% elif class %}
                                <span class="system-info">{{ class }}</span>
                            {% endif %}

                            {{ listFront }}
                        </button>

                        {% if nickActive %}
                            <div class="element-dropdown-layer absolute top left">
                                <div class="element-dropdown-layer-inner">
                                    <select hidden="">
                                        <option value="1">인디 타임라인 보기</option>
                                        <option value="2">작성글 보기</option>
                                    </select>
                                    <button class="element-dropdown-button">
                                        인디 타임라인 보기
                                    </button>
                                    <button class="element-dropdown-button">
                                        작성글 보기
                                    </button>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </strong>
                <i>·</i>

                {% if timeActive %}
                    <span class="time">
                        2021.03.12
                        <span class="element-tooltip">
                            <span class="tooltip-txt arrow-tl gray600 white">
                            2020.06.25 23:04(UTC+9)
                        </span>
                        </span>
                    </span>
                {% else %}
                    <span class="time">방금전</span>
                {% endif %}
            </div>
        </div>
        <div class="list-cont-wrap">
            <div class="list-cont">
                <a href="#">
                    <div class="list-tit">
                        <strong>
                            {{ listTitle }}
                        </strong>
                        <i class="new ic-badge-new-fill"></i>
                    </div>
                    <div class="list-txt">
                        {{ listTxt }}
                    </div>
                </a>

                <div class="list-info">
                    <div class="list-info-detail">
                        <a href="#" class="ic-community-reply-line">999+</a>
                        <button class="ic-community-thumbs-up-line {{ state.like }}">999+</button>
                        <button class="ic-community-thumbs-down-line {{ state.hate }}">0</button>
                    </div>
                </div>
            </div>

            <div class="list-thumb">
                <div class="inner">
                    {% if img %}
                        <a href="#">
                            <img src="/static/image/list/{{ img }}" alt="">

                            <i class="{{ fileType }}"></i>
                            <!--
                                <i class="ic-media-av-play-circle-line"></i>
                                <i class="ic-community-thumbnail-survey-line"></i>
                                <i class="ic-community-thumbnail-music-line"></i>
                                <i class="ic-community-attach-image-line"></i>
                                <i class="ic-community-link-line"></i>
                            -->

                            <div class="thum-num">+10</div>
                        </a>
                    {% endif %}
                    <a href="#"></a>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

