{% macro base(style, img, listTitle, listTxt, listFront) %}
    <div class="list-wrap" style="{{ style }}">
        <div class="list-thumb">
            <div class="inner">
                {% if img %}
                    <img src="/static/image/list/{{ img }}" alt="">
                {% endif %}
            </div>
        </div>
        <div class="list-cont">
            <div class="list-tit">
                <strong>
                    {{ listTitle }}
                </strong>
            </div>
            <div class="list-txt">
                {{ listTxt}}
            </div>
            <div class="list-info">
                <div class="front">{{ listFront }}</div>
                <div class="back">
                    <i class="ic-community-number-of-view-line"></i>
                    999
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

