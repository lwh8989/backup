{% import "_include/module/board/board.njk" as board %}
{% import "_include/form/dropdown.njk" as dropdown %}
{% import "_include/form/input.njk" as input %}
{% import "_include/form/button.njk" as btn %}
{% import "_include/form/checkbox.njk" as checkbox %}
{% import "_include/module/write/attach.njk" as attach %}

{% macro base(  ) %}
<div class="module-write">
  <!-- Header -->
  <div class="write-header">
    {{ dropdown.select(
      width="full", 
      height="h44", 
      addClass="box-type", 
      selectButtonTxt="카테고리 선택", 
      selectIcon="ic-community-oppose-fill"
      ) 
    }}
    {{ dropdown.select(
      width="full", 
      height="h44", 
      addClass="box-type", 
      selectButtonTxt="말머리 선택", 
      selectIcon="ic-community-oppose-fill"
      ) 
    }}
    {{ input.base(
      height="h44", 
      type="text", 
      addClass="box-type", 
      place="제목을 입력해주세요."
      ) 
    }}
  </div>
  <!-- Contents -->
  <div class="write-contents">
    <!-- [D] 에디터를 넣어서 개발 해 주세요. style값은 제거 해 주세요. -->
    <div class="write-edit-area" style="border: 1px solid #dbdbdb; box-sizing: border-box;">에디터 삽입 영역</div>
    <!-- [D] 글쓰기 버튼 영역 -->
    <div class="write-contents-area">
      <div class="write-image-area">
        <p>대표이미지 별도 등록</p>
        {{ btn.base(colorClass='bg-outline', sizeClass='size-chips32', txt='이미지 선택', shapeClass='btn-round') }}
      </div>
    </div>
    <!-- [D] 글쓰기 이미지 설정 영역 -->
    <div class="write-setting-area">
      <!-- 대표이미지 등록  -->
      <div class="write-setting-section">
        <div class="setting-area-header">
          <p class="setting-title">대표이미지 별도 등록</p>
          <div class="byte">
            <span class="byte-count">119KB</span><span class="byte-total">/ 1024MB</span>
          </div>
        </div>
        <div class="setting-area-body">
          {{ attach.base( attachItem=['attachItem'], cbDefault="" ) }}
        </div>
        <div class="setting-area-header">
          <p class="setting-title">첨부된 이미지 / 동영상 <span>%N%개</span></p>
        </div>
        <div class="setting-area-body">
          {{ attach.base( attachItem=['attachItem', 'attachItem', 'attachItem', 'attachItem'], cbDefault="false" ) }}
          <p class="setting-desc">체크된 이미지는 대표 이미지로 보여집니다.</p>
        </div>
      </div>
    </div>
    <!-- [D] 글쓰기 추천 대상 설정 영역 -->
    <div class="write-setting-area">
      <div class="write-setting-section">
        <div class="setting-area-header">
          <p class="setting-title">추천 대상 설정</p>
        </div>
        <div class="setting-area-body">
          {{ checkbox.base( height="h20", id="checkbox-05", styleClass="checkbox-square", styleText="checkbox-text", label="추천 게시물 대상 제외", state="" ) }}
          <p class="setting-desc">위 항목에 체크하면 운영자가 이 게시물을 추천 게시물 대상에서 제외합니다. 설정이 반영되는 시간까지 최대 30분이 소요될 수 있습니다.</p>
        </div>
      </div>
    </div>
    <!-- [D] 글쓰기 공지사항 설명 및 예약 게시 설정 -->
    <div class="write-setting-area">
      <div class="write-setting-section">
        <div class="setting-area-header">
          <p class="setting-title">공지사항 설정</p>
        </div>
        <div class="setting-area-body">
          <div class="flex-wrap">
            {{ checkbox.base( 
              height="h20", 
              id="checkbox-05", 
              styleClass="checkbox-square", 
              styleText="checkbox-text", 
              label="메인 및 전체 게시판", state="" )
            }}
            {{ checkbox.base( 
              height="h20", 
              id="checkbox-05", 
              styleClass="checkbox-square", 
              styleText="checkbox-text", 
              label="메인만", state="" )
            }}
            {{ checkbox.base( 
              height="h20", 
              id="checkbox-05", 
              styleClass="checkbox-square", 
              styleText="checkbox-text", 
              label="현재 선택된 게시판만", state="" )
            }}
            {{ dropdown.select(
              width="", 
              height="h32", 
              addClass="box-type", 
              selectButtonTxt="공지", 
              selectIcon="ic-community-oppose-fill") 
            }}
          </div>
          <div class="flex-wrap">
            {{ checkbox.base( 
              height="h20", 
              id="checkbox-05", 
              styleClass="checkbox-square", 
              styleText="checkbox-text", 
              label="공지 해제 예약 사용", state="disabled" )
            }}
            {{ input.icon(
              height="h32", 
              type="text", 
              addClass="box-type box-reverse calendar", 
              place="input placeholder", 
              txt="YYYY.MM.DD", 
              icon={first: "ic-community-calendar-line"}, 
              state="readonly") 
            }}
            {{ dropdown.select(
              width="", 
              height="h32", 
              addClass="box-type", 
              selectButtonTxt="00시", 
              selectIcon="ic-community-oppose-fill") 
            }}
            {{ dropdown.select(
              width="", 
              height="h32", 
              addClass="box-type", 
              selectButtonTxt="00분", 
              selectIcon="ic-community-oppose-fill") 
            }}
          </div>
        </div>
        <div class="setting-area-header">
          <p class="setting-title">예약 게시 설정</p>
        </div>
        <div class="setting-area-body">
          <div class="flex-wrap">
            {{ checkbox.base( 
              height="h20", 
              id="checkbox-05", 
              styleClass="checkbox-square", 
              styleText="checkbox-text", 
              label="공지 해제 예약 사용", state="" )
            }}
            {{ input.icon(
              height="h32", 
              type="text", 
              addClass="box-type box-reverse calendar", 
              place="input placeholder", 
              txt="YYYY.MM.DD", 
              icon={first: "ic-community-calendar-line"}, 
              state="readonly") 
            }}
            {{ dropdown.select(
              width="", 
              height="h32", 
              addClass="box-type", 
              selectButtonTxt="00시", 
              selectIcon="ic-community-oppose-fill") 
            }}
            {{ dropdown.select(
              width="", 
              height="h32", 
              addClass="box-type", 
              selectButtonTxt="00분", 
              selectIcon="ic-community-oppose-fill") 
            }}
          </div>
          <p class="setting-desc">예약 설정한 카드는 내활동 > 작성한 카드 > 편집중인 카드 탭에서 확인할 수 있습니다.</p>
        </div>
      </div>
    </div>
    <!-- [D] 타임라인 메타정보 UI 레거쉬 -->
    <div class="write-setting-area">
      <div class="legacy-module-editor editor-myindie">
        <div class="legacy-module-editor-container">
          <div class="myindie-contents">
            <div class="myindie-category">
              <span class="myindie-title">로스트아크</span>
              <span class="myindie-board">팬아트게시판</span>
            </div>
            <p class="myindie-subject">이것은 원문의 제목입니다. 이것은 원문의 제목입니다. 이것은 원문의 제목입니다. 이것은 원문의 제목입니다. 이것은 원문의 제목입니다. </p>
            <p class="myindie-desc">크로스파이어 2.0 업데이트가 실시되었습니다. 캐릭터들이 업데이트 되었습니다. 인기 캐릭터 3종을 멋지게 리뉴얼 했습니다.</p>
            <div class="legacy-module-profile">
              <a href="#">
                  <div class="profile-thumb">
                      <img src="https://dummyimage.com/600x600/00eaff/040b6b" alt="images">
                      <!--
                          <span class="legacy-element-icon ic-badge-cm-s16" style="">cm</span> 
                          <span class="legacy-element-icon ic-badge-official-s16" style="">official</span>
                      -->
                  </div>
                  <div class="profile-content">
                      <span class="mark official">OFFICIAL</span>
                      <span class="mark gm">GM</span>
                      <span class="mark cm">CM</span>
                      <span href="#" class="profile-name">아이디노출최대20자아이디노출최대20자</span>
                  </div>
              </a>
              <!-- [D] 아이디를 클릭하면 등장,숨김을 해주세요. -->
              <!-- [D] style값을 제거하고 사용 해 주세요. -->
              <ul class="legacy-module-dropdown" style="display:none; width: 120px;">
                <li>
                  <button type="button" class="legacy-element-btn btn-square size-40">
                    <span class="btn-txt">작성글 보기</span>
                  </button>
                </li>
                <li>
                  <button type="button" class="legacy-element-btn btn-square size-40">
                    <span class="btn-txt">타임라인 보기</span>
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="legacy-module-editor editor-myindie myindie-image">
        <div class="legacy-module-editor-container">
          <div class="myindie-img">
            <img src="https://dummyimage.com/240x180/0099ff/fff" alt="card image">
          </div>
          <div class="myindie-contents">
            <div class="myindie-category">
              <span class="myindie-title">로스트아크</span>
              <span class="myindie-board">팬아트게시판</span>
            </div>
            <p class="myindie-subject">이것은 원문의 제목입니다. 이것은 원문의 제목입니다. 이것은 원문의 제목입니다. 이것은 원문의 제목입니다. 이것은 원문의 제목입니다. </p>
            <p class="myindie-desc">크로스파이어 2.0 업데이트가 실시되었습니다. 캐릭터들이 업데이트 되었습니다. 인기 캐릭터 3종을 멋지게 리뉴얼 했습니다.</p>
            <div class="legacy-module-profile">
              <a href="#">
                  <div class="profile-thumb">
                      <img src="https://dummyimage.com/600x600/00eaff/040b6b" alt="images">
                      <!--
                          <span class="legacy-element-icon ic-badge-cm-s16" style="">cm</span> 
                          <span class="legacy-element-icon ic-badge-official-s16" style="">official</span>
                      -->
                  </div>
                  <div class="profile-content">
                      <span class="mark official">OFFICIAL</span>
                      <span class="mark gm">GM</span>
                      <span class="mark cm">CM</span>
                      <span href="#" class="profile-name">아이디노출최대20자아이디노출최대20자</span>
                  </div>
              </a>
              <!-- [D] 아이디를 클릭하면 등장,숨김을 해주세요. -->
              <!-- [D] style값을 제거하고 사용 해 주세요. -->
              <ul class="legacy-module-dropdown" style="display:none; width: 120px;">
                <li>
                  <button type="button" class="legacy-element-btn btn-square size-40">
                    <span class="btn-txt">작성글 보기</span>
                  </button>
                </li>
                <li>
                  <button type="button" class="legacy-element-btn btn-square size-40">
                    <span class="btn-txt">타임라인 보기</span>
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="legacy-module-editor editor-myindie myindie-image myindie-empty">
        <div class="legacy-module-editor-container">
          <div class="myindie-img">
            <span class="legacy-element-icon ic-img-null-caution" style="">ic-img-null-caution</span>
          </div>
          <div class="myindie-contents">
            <p class="myindie-subject">게시물이 삭제되었거나 접근할 수 없는 상태입니다.</p>
          </div>
        </div>
      </div>
    </div>
    <!-- [D] 글쓰기 Tag 영역 -->
    <div class="write-contents-area">
      <div class="write-tag-area">
        <p># 입력한 태그</p>
        {{ btn.base(colorClass='bg-outline', sizeClass='size-chips32', txt='# 턴택', shapeClass='btn-round') }}
        {{ btn.base(colorClass='bg-outline', sizeClass='size-chips32', txt='# 심심할때좋은게임', shapeClass='btn-round') }}
        {{ btn.base(colorClass='bg-outline', sizeClass='size-chips32', txt='# 등록한태그가많으면아래로 태그 내용이 보여집니다. 간격은 8px', shapeClass='btn-round') }}
        {{ btn.base(colorClass='bg-outline', sizeClass='size-chips32', txt='# 태그 글자수 제한이없을까요?', shapeClass='btn-round') }}
        {{ btn.base(colorClass='bg-outline', sizeClass='size-chips32', txt='# 시물레이션', shapeClass='btn-round') }}
        {{ btn.base(colorClass='bg-outline', sizeClass='size-chips32', txt='# 초보자추천게임', shapeClass='btn-round') }}
      </div>
    </div>
  </div>
  <!-- footer -->
  <div class="write-footer">
    <div class="footer-align-left">
      {{ btn.base(colorClass='bg-outline', sizeClass='size-medium', txt='임시저장', shapeClass='') }}
      {# {{ btn.base(colorClass='bg-outline', sizeClass='size-medium', txt='미리보기', shapeClass='') }} #}
    </div>
    <div class="footer-align-right">
      {{ btn.base(colorClass='bg-outline', sizeClass='size-medium', txt='취소', shapeClass='') }}
      {{ btn.base(colorClass='bg-primary', sizeClass='size-medium', txt='등록', shapeClass='') }}
    </div>
  </div>
</div>
{% endmacro %}

