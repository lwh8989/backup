{% macro base(isLink,shapeClass,hasIconLeft,hasIconRight,typeClass, sizeClass, colorClass, shadowClass, txt, state, subtxt, fullWidth) %}
  {% if isLink %}
    <a href="#" class="lagarcy-element-btn{% if fullWidth %} btn-flex{% endif %}{{ shapeClass }} {{ colorClass }} {{ typeClass }} {{ sizeClass }} {{shadowClass}}" {{ state }}>
      {% if hasIconLeft %}<span class="lagarcy-element-icon {{ hasIconLeft }}"></span>{% endif %}
      <span class="btn-txt">
        {{txt}}{% if subtxt %}<b>{{ subtxt }}</b>{% endif %}
      </span>
      {% if hasIconRight %}<span class="lagarcy-element-icon {{ hasIconRight }}"></span>{% endif %}
    </a>
    {% else %}
      <button class="lagarcy-element-btn{% if fullWidth %} btn-flex{% endif %} {{ shapeClass }} {{ colorClass }} {{ typeClass }} {{ sizeClass }} {{shadowClass}}" {{ state }}>
        {% if hasIconLeft %}<span class="lagarcy-element-icon {{ hasIconLeft }}"></span>{% endif %}
        <span class="btn-txt">
          {{txt}}{% if subtxt %}<b>{{ subtxt }}</b>{% endif %}
        </span>
        {% if hasIconRight %}<span class="lagarcy-element-icon {{ hasIconRight }}"></span>{% endif %}
      </button>
  {% endif %}
{% endmacro %}

