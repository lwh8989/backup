{% macro play(txt, state, disabled) %}
  <div class="lagarcy-element-select select-base {{ state }}">
    {{ btn.withIcon(sizeClass='size-48', colorClass='btn-orange-gd', txt=txt, state=disabled, iconClass='ic-download-wh') }}
    <select name="">
      <option value="">type1</option>
      <option value="">type2</option>
      <option value="">type3type3type3type3type3</option>
    </select>
    {{ dropdown.store() }}
  </div>
{% endmacro %}

{% macro install(txt, state, disabled) %}
  <div class="lagarcy-element-select select-base {{ state }}">
    {{ btn.withIcon(sizeClass='size-48', colorClass='btn-orange-gd', shadowClass="btn-shadow", txt=txt, state=disabled, iconClass='ic-download-wh') }}
    <div class="lagarcy-module-dialog dialog-basic dialog-size-install" style="display: none;">
      <div class="dialog-container">
        <div class="dialog-header"></div>
        <div class="dialog-body">
          <div class="dialog-content none-header-tit">
            <p class="dialog-confim-text">게임을 시작하기 위해<br>STOVE 클라이언트 설치가 필요합니다.</p>
          </div>
        </div>
        <div class="dialog-footer">
          {{ btn.withIcon(sizeClass='size-40', colorClass='btn-orange', txt='STOVE 클라이언트 설치', iconClass='ic-download-install') }}
        </div>
      </div>
    </div>
  </div>
{% endmacro %}

