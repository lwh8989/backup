{% import "src/view/lagarcy/elements/btn.njk" as btn %}
{% import "src/view/lagarcy/elements/dropdown.njk" as dropdown %}

{% macro base(txt, state, disabled, sizeClass) %}
  <div class="lagarcy-element-select select-base {{ state }}">
    {{ btn.base(sizeClass=sizeClass, shapeClass='btn-select', colorClass='btn-gray-line', txt=txt, state=disabled) }}
    <select name="">
      <option value="">type1</option>
      <option value="">type2</option>
      <option value="">type3</option>
    </select>
    {{ dropdown.base(isVisible=true) }}
  </div>
{% endmacro %}

