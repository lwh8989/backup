{% extends "_include/layout/index/index.njk" %}
{% import "_include/partial/footer/footer.njk" as footer %}
{% import "_include/layout/dialog/dialog.njk" as dialog %}
{% import "_include/layout/lnb-side/lnb-side.njk" as lnbSide %}
{% import "_include/layout/gnb-side/gnb-side.njk" as gnbSide %}
{% import "_include/layout/navigation/navigation.njk" as navigation %}

<!-- styles -->
{% block styles %}
{% endblock %}

<!-- gnb -->
{% block gnb %}
<!-- [D] GNB가 두줄로 나올 경우 depth2 를 추가 해 주세요.   -->
<header class="layout-header gnb-default-fixed">
    % 여기에 마크업을 해 주세요. %
</header>
{% endblock %}

<!-- navigation -->
{% block navigation %}
    {{ navigation.base() }}
{% endblock %}

<!-- content -->
{% block content %}
<div class="layout-basic">
    % 여기에 마크업을 해 주세요. %
    <p class="pc" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
        <b style=" font-size: 24px;">Layout Basic</b> <br>
    </p>
</div>
{% endblock %}

<!-- footer -->
{% block footer %}
<footer class="layout-footer">
    {{ footer.base() }}
</footer>
{% endblock %}

<!-- dialog -->
{% block dialog %}
    <!-- [D] .is-opened 누르면 활성화됩니다.  -->
    {{ dialog.base(stateClass="") }}
{% endblock %}

<!-- lnb side -->
{% block lnbSide %}
    <!-- [D] .is-opened 누르면 활성화됩니다.  -->
    {{ lnbSide.base(stateClass="") }}
{% endblock %}

<!-- gnb side -->
{% block gnbSide %}
    <!-- [D] .is-opened 누르면 활성화됩니다.  -->
    {{ gnbSide.base(stateClass="") }}
{% endblock %}

<!-- scripts -->
{% block scripts %}
{% endblock %}